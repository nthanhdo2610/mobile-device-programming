<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SharedPrefsActivity">

    <EditText
            android:id="@+id/editTextPref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="Enter text here"
            android:inputType="text" />
    <TextView
            android:id="@+id/textViewPref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Stored Text will appear here"
            android:layout_below="@id/editTextPref"
            android:textSize="18sp" />

    <Button
            android:id="@+id/savePrefBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPref"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:onClick="savePref"
            android:text="Save Ref" />

    <TextView
            android:id="@+id/textViewCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Counter will appear here"
            android:layout_below="@id/savePrefBtn"
            android:textSize="18sp" />

</RelativeLayout>
